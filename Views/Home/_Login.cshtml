@model LoginUser

<div class="row">
    <h1 class="text-center mb-4">Login</h1>

    <div class="col-8 offset-md-2 border border-2 border-dark rounded p-4 m-auto">
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="LoginEmail" class="mb-1">Email</label>
                <input asp-for="LoginEmail" class="form-control border border-2 border-dark rounded">
                <span asp-validation-for="LoginEmail" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LoginPassword" class="mb-1">Password</label>
                <input asp-for="LoginPassword" class="form-control border border-2 border-dark rounded">
                <span asp-validation-for="LoginPassword" class="text-danger mb-1"></span>
            </div>

            <div class="form-group d-flex justify-content-end">
                <input type="submit" class="btn btn-outline-dark border border-dark border-2" value="Log In">
            </div>
        </form>
    </div>
</div>